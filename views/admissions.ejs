	$("#applyOnlineButton").click(function(){
		$("#mainFrame").addClass("apply2");
		$("#mainFrame").attr("scrolling","no");
		$("#iframeContainer").addClass("apply1");
		$("#main-header-item").text("Apply Online");
		$("#mainFrame").removeClass("download-notification2");
		$("#iframeContainer").removeClass("download-notification1");
		
	});
	
	$("#studentLogin").click(function(){
		$("#main-header-item").text("Student Login for UG/PG/Ph.D/ICDEOL/Others");
		$("#mainFrame").removeClass("apply2");
		$("#iframeContainer").removeClass("apply1");
		$("#mainFrame").removeClass("download-notification2");
		$("#iframeContainer").removeClass("download-notification1");
	})
	
	$("#adminLogin").click(function(){
		$("#main-header-item").text("Admin Login for HPU Staff members");
		$("#mainFrame").removeClass("apply2");
		$("#iframeContainer").removeClass("apply1");
		$("#mainFrame").removeClass("download-notification2");
		$("#iframeContainer").removeClass("download-notification1");
	})
	
	$("#forgetUserIdAndPassword").click(function(){
		$("#main-header-item").text("Recover your forgotten User ID and Password");
		$("#mainFrame").removeClass("apply2");
		$("#iframeContainer").removeClass("apply1");
		$("#mainFrame").removeClass("download-notification2");
		$("#iframeContainer").removeClass("download-notification1");
	})
	
	$("#admitCardButton").click(function(){
		$("#main-header-item").text("Download your Admit Card");
		$("#mainFrame").removeClass("apply2");
		$("#iframeContainer").removeClass("apply1");
		$("#mainFrame").removeClass("download-notification2");
		$("#iframeContainer").removeClass("download-notification1");
	})
	
	$("#admissionFeesButton").click(function(){
		$("#main-header-item").text("Pay Admission/Renewal fees (For Regular Candidates Only)");
		$("#mainFrame").removeClass("apply2");
		$("#iframeContainer").removeClass("apply1");
		$("#mainFrame").removeClass("download-notification2");
		$("#iframeContainer").removeClass("download-notification1");
	})
	
	$("#icdeolFeesButton").click(function(){
		$("#main-header-item").text("Pay ICDEOL Admission Fees Online");
		$("#mainFrame").removeClass("apply2");
		$("#iframeContainer").removeClass("apply1");
		$("#mainFrame").removeClass("download-notification2");
		$("#iframeContainer").removeClass("download-notification1");
	})
	
	$("#foriegnCandidatesButton").click(function(){
		$("#main-header-item").text("Login For Foriegn/Late Candidates");
		$("#mainFrame").removeClass("apply2");
		$("#iframeContainer").removeClass("apply1");
		$("#mainFrame").removeClass("download-notification2");
		$("#iframeContainer").removeClass("download-notification1");
	})
	
	$("#downloadNotificationsButton").click(function(){
		$("#mainFrame").addClass("download-notification2");
		$("#iframeContainer").addClass("download-notification1");
		$("#mainFrame").removeClass("apply2");
		$("#iframeContainer").removeClass("apply1");
		$("#main-header-item").text("Notifications");
		$("footer").css({"margin-top":"1200px", "margin-right":"200px"});
		

	})
	
	$("#helplineButton").click(function(){
		$("#mainFrame").removeClass("download-notification2");
		$("#iframeContainer").removeClass("download-notification1");
		$("#mainFrame").removeClass("apply2");
		$("#iframeContainer").removeClass("apply1");
		$("#main-header-item").text("Helpline Numbers");
		$("#mainFrame").attr("height","1800px");
	});
	
	$("#contactButton").click(function(){
		$("#mainFrame").removeClass("download-notification2");
		$("#iframeContainer").removeClass("download-notification1");
		$("#mainFrame").removeClass("apply2");
		$("#iframeContainer").removeClass("apply1");
		$("#main-header-item").text("Fill the form below to Get in touch with us !!!");
	})
	
	
	// ===========================================================================
	//		logic to resize the iframe while clicked on it (apply now button)
	// ===========================================================================
	const mainFrame = document.getElementById("mainFrame");
	const iframeContainer  = document.getElementById("iframeContainer");
	focus();
	var listener = addEventListener('blur', function() {
	if(document.activeElement === document.getElementById('mainFrame')) {
		// mainFrame.classList.remove("apply2");
		mainFrame.setAttribute("scrolling","yes");
		setTimeout(function(){iframeContainer.classList.remove("apply1")},300);
		setTimeout(function(){mainFrame.classList.remove("apply2")},300);
	}
    removeEventListener(listener);
});
	
	
	
</script>
